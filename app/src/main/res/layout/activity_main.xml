<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/main_container">

    <TextView
        android:id="@+id/introView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginStart="111dp"
        android:layout_marginTop="78dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="Introduction To Android"
        android:textAppearance="@style/TextAppearance.AppCompat.Button" />

    <TextView
        android:id="@+id/welcomeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginStart="113dp"
        android:layout_marginTop="25dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="COMP 3606 Assignment 2"
        android:textAppearance="@style/TextAppearance.AppCompat.Button" />

    <TextView
        android:id="@+id/guIView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="84dp"
        android:layout_marginTop="204dp"
        android:text="Information On GUI Components"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        tools:text="Information On GUI components" />

    <TextView
        android:id="@+id/quizView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="266dp"
        android:text="Quiz"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/introButton"
        android:layout_width="83dp"
        android:layout_height="71dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="122dp"
        android:layout_marginEnd="-24dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:onClick="onImageButtonClick"
        android:padding="1dp"
        android:scaleType="fitCenter"
        android:src="@drawable/intro" />

    <ImageButton
        android:id="@+id/guiButton"
        android:layout_width="111dp"
        android:layout_height="143dp"
        android:layout_alignEnd="@+id/introButton"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="245dp"
        android:layout_marginEnd="-15dp"
        android:background="@android:color/transparent"
        android:onClick="onImageButtonClick"
        android:src="@drawable/gui" />

    <ImageButton
        android:id="@+id/quizButton"
        android:layout_width="176dp"
        android:layout_height="123dp"
        android:layout_alignStart="@+id/quizView"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="-74dp"
        android:layout_marginBottom="118dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:onClick="onImageButtonClick"
        android:padding="1dp"
        android:scaleType="fitCenter"
        android:src="@drawable/quiz" />

    <Button
        android:id="@+id/paper1Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="14dp"
        android:layout_marginBottom="12dp"
        android:text="Paper 1" />

    <Button
        android:id="@+id/intentsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/quizView"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="-62dp"
        android:layout_marginBottom="12dp"
        android:text="Intents Callback"
        tools:text="Intents CallBack" />

    <Button
        android:id="@+id/paper2Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="12dp"
        android:text="Paper 2" />
</RelativeLayout>
